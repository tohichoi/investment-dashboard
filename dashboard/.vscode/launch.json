{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Debug index.py (regular)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/index.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": true
    },
    {
        "name": "Python: Streamlit Debug",
        "type": "debugpy",
        "request": "launch",
        "module": "streamlit",
        "args": [
            "run",
            // 아래의 "app.py"를 실제 Streamlit 파일 이름으로 변경하세요.
            "${workspaceFolder}/index.py",
            "--server.port",
            "8501" // 기본 포트
        ],
        "justMyCode": true,
        "cwd": "${workspaceFolder}"
    },
    {
      "name": "Streamlit: Run index.py",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit.cli",
      "args": ["run", "${workspaceFolder}/index.py", "--server.port", "8501", "--server.headless", "true"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false
    },
    {
      "name": "Attach to Python (remote)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      }
    }
  ]
}
